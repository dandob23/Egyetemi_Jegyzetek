<Window x:Class="_1108.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1108"
        mc:Ignorable="d"
        Title="SecondWindow" Height="250" Width="400">
    <Grid>
        <CheckBox x:Name="checkBox" Content="CheckBox" HorizontalAlignment="Left" Margin="28,20,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBox" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Margin="10,88,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <RadioButton x:Name="rb1" Content="First" HorizontalAlignment="Left" Margin="296,20,0,0" VerticalAlignment="Top" GroupName="myGroup" IsChecked="True"/>
        <RadioButton x:Name="rb2" Content="Second" HorizontalAlignment="Left" Margin="296,40,0,0" VerticalAlignment="Top" GroupName="myGroup"/>
        <RadioButton x:Name="rb3" Content="Third" HorizontalAlignment="Left" Margin="296,62,0,0" VerticalAlignment="Top" GroupName="myGroup"/>
        <Slider x:Name="Slider" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
