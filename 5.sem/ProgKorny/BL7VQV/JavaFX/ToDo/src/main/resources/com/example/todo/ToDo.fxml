<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="500.0" maxWidth="800.0" minHeight="400.0" minWidth="600.0" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controller.ToDoController">
   <Label id="udvozloLabel" text="Üdv a To-Do listádban" translateX="30.0" translateY="20.0">
      <font>
         <Font name="System Bold Italic" size="18.0" />
      </font>
   </Label>

    <ListView fx:id="toDoListView" maxHeight="400.0" maxWidth="500.0" minHeight="300.0" minWidth="400.0" prefHeight="400.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets bottom="-20.0" left="370.0" right="20.0" top="50.0" />
      </VBox.margin></ListView>
    <Button fx:id="addButton" onAction="#addItem" text="Hozzáadás" translateX="30.0" translateY="-280.0">
      <VBox.margin>
         <Insets />
      </VBox.margin></Button>
    <Button fx:id="editButton" onAction="#editItem" text="Szerkesztés" translateX="30.0" translateY="-260.0" />
    <Button fx:id="deleteButton" onAction="#deleteItem" text="Törlés" translateX="30.0" translateY="-240.0" />
</VBox>
